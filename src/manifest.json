{
  "manifest_version": 3,
  "name": "Teams HID Telephony",
  "description": "Adds call control support to Microsoft Teams",
  "icons": {
    "16": "green-16.png",
    "48": "green-48.png",
    "128": "green-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://teams.live.com/*",
        "https://teams.microsoft.com/*",
        "https://teams.microsoft.us/*",
        "https://teams.microsoft.us.mcas-gov.us/*",
        "https://teams.microsoft.com.mcas.ms/*"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "css": [
        "content.styles.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },  
  "action": {
    "default_title": "Connect to Jabra device",
    "default_icon": {
      "16": "red-16.png",
      "48": "red-48.png",
      "128": "red-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "hid_dialog.html",
        "content.styles.css"
      ],
      "matches": [
        "https://teams.live.com/*",
        "https://teams.microsoft.com/*",
        "https://teams.microsoft.us/*",
        "https://teams.microsoft.us.mcas-gov.us/*",
        "https://teams.microsoft.com.mcas.ms/*"
      ]    
    }
  ]
}